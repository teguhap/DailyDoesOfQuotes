<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:gravity="center"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textHallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Hallo Quotser"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llRegistAddProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Login dulu yuk"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnRegistAddProfile"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#3893FF"
                android:text="Login" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileHasLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMyQuotes"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#3893FF"
                android:fontFamily="@font/montserrat"
                android:text="My Quotes" />

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#EAEAEA"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Edit Profile" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="#EAEAEA"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Logout" />

        </LinearLayout>


    </LinearLayout>




</FrameLayout>